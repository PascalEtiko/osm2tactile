<?xml version="1.0" encoding="UTF-8"?>
<Map background-color="{{ background_color }}" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs" minimum-version="3.0.0">
  <Style name="road-style">
    <Rule>
      <Filter>[highway] != '' and [highway] != 'track'</Filter>
      <LineSymbolizer stroke="{{ road.line.stroke }}" stroke-width="{{ road.line.stroke_width }}"/>
      <TextSymbolizer allow-overlap="{{ road.text.allow_overlap }}" face-name="{{ road.text.face_name }}" size="{{ road.text.size }}" placement="{{ road.text.placement }}" dx="{{ road.text.dx }}" dy="{{ road.text.dy }}" spacing="{{ road.text.spacing }}">[name]</TextSymbolizer>
    </Rule>
  </Style>
  <Style name="building-style">
    <Rule>
      <Filter>[building] != ''</Filter>
      <LineSymbolizer stroke="{{ building.line.stroke }}" stroke-dasharray="{{ building.line.stroke_dasharray }}" stroke-width="{{ building.line.stroke_width }}"/>
    </Rule>
  </Style>
  <Style name="public-transport-style">
    <Rule>
        <Filter>[public_transport] != ''</Filter>
        <PointSymbolizer file="osm2tactile/static/icons/circle.png" transform="scale(0.25,0.25)"/>
    </Rule>
  </Style>
  <Style name="center-style">
    <Rule>
        <PointSymbolizer file="osm2tactile/static/icons/square.png" transform="scale(0.25,0.25)"/>
    </Rule>
  </Style>
</Map>
